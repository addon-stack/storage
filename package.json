{
  "name": "@addon-core/storage",
  "version": "0.1.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/addon-stack/storage"
  },
  "homepage": "https://github.com/addon-stack/storage#readme",
  "bugs": {
    "url": "https://github.com/addon-stack/storage/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "build": "rslib build",
    "check": "biome check --write",
    "dev": "rslib build --watch",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest",
    "test:run": "jest --ci --passWithNoTests",
    "test:related": "jest --bail --passWithNoTests --findRelatedTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "release": "changeset publish"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "src/**/*.{ts,tsx,js,jsx}": [
      "npm run test:related --"
    ],
    "*.{json,css,scss,html}": [
      "biome check --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "glob": "^10.3.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.35.0",
    "@rslib/core": "^0.13.3",
    "@types/chrome": "^0.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.4",
    "eslint": "^9.35.0",
    "globals": "^16.3.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "@changesets/cli": "^2.27.9",
    "@changesets/changelog-github": "^0.5.0"
  }
}
